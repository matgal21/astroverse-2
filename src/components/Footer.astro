---
import { Icon } from "astro-icon/components";
import Link from "@components/Links.astro";
import { BRAND_NAME, FooterLinks, SocialLinks } from "@consts";
const today = new Date();
---
<footer class="mt-auto w-full py-4 bg-gradient-to-r from-sky-500 via-sky-800 via-50% to-black to-100%">
  <nav class="mx-auto w-full max-w-[85rem] px-4" aria-label="Footer">
    <div class="flex flex-col items-center justify-center sm:flex-row sm:justify-between">
      <div id="navbar-alignment" class="internal-links sm:order-2">
        <div
          class="mt-2 flex flex-row gap-5 sm:mt-0 sm:flex-row sm:items-center sm:ps-5" 
        >
          {
            FooterLinks.map((link) => (
              <Link
                href={link.href}
                class="inline-flex hover:text-orange-500 gap-x-2 text-lg font-bold text-neutral-100 dark:text-neutral-500 dark:hover:text-neutral-200"
              >
                {link.title}
              </Link>
            ))
          }
        </div>
      </div>

      <div class="mt-2 flex flex-wrap gap-2 sm:order-3 sm:mb-0 sm:gap-0">
        {
          SocialLinks.map((link) => (
            <button
              type="button"
              class="relative inline-flex h-12 w-12 items-center gap-x-2 bg-neutral-100 text-neutral-900 px-4 py-3 hover:text-red-700 dark:bg-neutral-900 dark:text-white "
            >
              <a
                href={link.href}
                target="_blank"
                class="absolute inset-0 z-10 text-orange-600"
                aria-label={link.label}
                title={link.label}
              />
              <Icon name={link.icon} class="icon-base text-xl" />
            </button>
          ))
        }
      </div>

      <div class="mt-2 sm:order-1 sm:mb-0">
        <a class="flex-none text-lg text-neutral-100 font-bold  dark:text-neutral-500 dark:hover:text-neutral-200" href="/" aria-label="Brand" title={BRAND_NAME}
          >{BRAND_NAME} &copy; {today.getFullYear()}</a
        >
      </div>
    </div>
  </nav>
</footer>