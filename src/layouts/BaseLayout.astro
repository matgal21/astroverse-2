---
import BaseHead from "@components/BaseHead.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <link rel="icon" type="image" href="/public/img/logos solo de ida/logo azul1.png" />

    <!-- Google tag (gtag.js) -->

  </head>
  <body
    class=""
  >
    <Header />
    <div class="mx-auto flex mt-8 min-h-screen max-w-6xl flex-col px-4 dark:prose-invert sm:px-6 lg:px-8 dark:bg-neutral-900">
      <slot />
    </div>
    <Footer />
  </body>
</html>

